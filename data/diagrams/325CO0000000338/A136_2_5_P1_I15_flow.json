      },
      {
        "id": "dec-road-contact",
        "type": "decision",
        "title": "敷地は沿道整備道路に接しているか？",
        "decision_type": "binary",
        "description": "設計図書から敷地が沿道整備道路に接しているか確認",
        "condition": {
          "operator": "EQ",
          "lhs": { "var": "R", "desc": "沿道整備道路への接道有無" },
          "rhs": { "value": true, "desc": "接している" }
        }
      },
      {
        "id": "proc-frontage-ratio",
        "type": "process",
        "title": "間口率を算定する",
        "process_type": "mechanical",
        "description": "F = L_building / L_site（建築物の沿道整備道路面の長さ ÷ 敷地の沿道整備道路接道部分の長さ）",
        "related_articles": [
          "令::A136_2_5:P4:I3",
          "令::A136_2_5:P4:I4"
        ]
      },
      {
        "id": "dec-frontage-ratio",
        "type": "decision",
        "title": "算定した間口率は最低限度以上か？",
        "decision_type": "binary",
        "description": "条例で定められた間口率の最低限度と比較",
        "condition": {
          "operator": "GTE",
          "lhs": { "var": "F", "desc": "沿道整備道路に係る間口率" },
          "rhs": { "var": "F_min", "desc": "間口率の最低限度" }
        },
        "related_articles": [
          "令::A136_2_5:P1:I14"
        ]
      },
      {
        "id": "proc-identify-scope",
        "type": "process",
        "title": "間口率の最低限度を超える部分を除いた適用対象範囲を特定する",
        "process_type": "mechanical",
        "description": "間口率の最低限度を超える部分は遮音構造要件の適用対象外となるため、対象範囲を特定"
      },
      {
        "id": "dec-target-height-range",
        "type": "decision",
        "title": "沿道整備道路路面中心から高さ5m未満の範囲があるか？",
        "decision_type": "binary",
        "description": "建築物の適用対象範囲内に、沿道整備道路の路面の中心からの高さが5m未満の範囲があるか確認",
        "condition": {
          "operator": "LT",
          "lhs": { "var": "H", "desc": "路面中心からの高さ", "unit": "m" },
          "rhs": { "value": 5, "desc": "5メートル", "unit": "m" }
        }
      },
      {
        "id": "proc-identify-height-range",
        "type": "process",
        "title": "高さ5m未満の範囲を特定する",
        "process_type": "mechanical",
        "description": "沿道整備道路の路面の中心からの高さが5m未満となる建築物の範囲を特定"
      },
      {
        "id": "dec-sound-barrier",
        "type": "decision",
        "title": "対象範囲は遮音上有効な構造か？",
        "decision_type": "multi",
        "options": [
          { "value": "空隙のない壁", "description": "空隙のない壁が設けられている" },
          { "value": "その他の遮音構造", "description": "その他の遮音上有効な構造である" },
          { "value": "遮音構造なし", "description": "遮音上有効な構造でない" }
        ],
        "description": "高さ5m未満の範囲に空隙のない壁が設けられているか、その他の遮音上有効な構造であるか判定"
      },
      {
        "id": "proc-wall-confirm",
        "type": "process",
        "title": "空隙のない壁であることを確認",
        "process_type": "human_judgment",
        "description": "対象範囲の壁が空隙のない壁であることを設計図書・仕様書等で確認"
      },
      {
        "id": "proc-other-sound-confirm",
        "type": "process",
        "title": "その他の遮音上有効な構造であることを確認",
        "process_type": "human_judgment",
        "description": "対象範囲がその他の遮音上有効な構造であることを設計図書・仕様書等で確認"
      },
      {
        "id": "end-pass-not-applicable",
        "type": "terminal",
        "title": "適合（対象外）",
        "result": "pass",
        "description": "敷地が沿道整備道路に接していないため、本号の適用対象外"
      },
      {
        "id": "end-pass-exempt",
        "type": "terminal",
        "title": "適合（適用除外）",
        "result": "pass",
        "description": "間口率の最低限度を超えないため、遮音構造要件の適用除外"
      },
      {
        "id": "end-pass-no-target",
        "type": "terminal",
        "title": "適合（対象範囲なし）",
        "result": "pass",
        "description": "高さ5m未満の範囲がないため、遮音構造要件の対象範囲なし"
      },
      {
        "id": "end-pass",
        "type": "terminal",
        "title": "適合",
        "result": "pass",
