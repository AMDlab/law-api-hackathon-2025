  "text_raw": "ボルト孔の径は、ボルトの径より一ミリメートルを超えて大きくしてはならない。ただし、ボルトの径が二十ミリメートル以上であり、かつ、構造耐力上支障がない場合においては、ボルト孔の径をボルトの径より一・五ミリメートルまで大きくすることができる。",
  "compliance_logic": {
    "scope_condition": {
      "operator": "AND",
      "conditions": [
        {
          "type": "subject",
          "value": "ボルト接合を用いる構造"
        }
      ],
      "note": "ボルト接合（高力ボルト接合を除く）を用いる建築物に適用"
    },
    "judgment_rule": {
      "operator": "OR",
      "conditions": [
        {
          "ref": "info-main-compliance",
          "operator": "==",
          "value": true,
          "note": "主文基準: ボルト孔の径 <= ボルトの径 + 1mm"
        },
        {
          "operator": "AND",
          "conditions": [
            {
              "ref": "info-exception-compliance",
              "operator": "==",
              "value": true,
              "note": "ただし書き基準: ボルト孔の径 <= ボルトの径 + 1.5mm"
            }
          ]
        }
      ]
    },
    "exceptions": {
      "operator": "AND",
      "conditions": [
        {
          "ref": "info-bolt-diameter-over20",
          "operator": "==",
          "value": true,
          "note": "ボルトの径が20mm以上"
        },
        {
          "ref": "info-structural-safe",
          "operator": "==",
          "value": true,
          "note": "構造耐力上支障がない"
        }
      ],
      "effect": "RELAXED_LIMIT"
    }
  },
