  "page_title": {
    "title": "防火区画（面積区画）",
    "target_subject": "建築物",
    "description": "準耐火建築物等で延べ面積1500㎡超のものについて、1500㎡以内ごとに防火区画を設けているかを判定する"
  },

  "legal_ref": {
    "law_id": "325CO0000000338",
    "law_type": "order",
    "law_name": "建築基準法施行令",
    "law_abbrev": "令",
    "article": "112",
    "paragraph": "1",
