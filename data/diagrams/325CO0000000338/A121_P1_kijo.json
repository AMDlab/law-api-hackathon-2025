      },
      {
        "id": "proc-005",
        "type": "process",
        "title": "客席等の有無の特定",
        "process_type": "undefined_input",
        "target_subject": "階",
        "iteration": "iterative",
        "description": "設計図書等から各階における客席、集会室、売場等の有無を確認する"
      },
      {
        "id": "proc-006",
        "type": "process",
        "title": "一号該当判定（劇場等）",
        "process_type": "mechanical",
        "target_subject": "階",
        "iteration": "iterative",
        "description": "劇場、映画館、演芸場、観覧場、公会堂又は集会場の用途に供する階でその階に客席、集会室等を有するか判定",
        "logic_expression": "U ∈ {劇場, 映画館, 演芸場, 観覧場, 公会堂, 集会場} AND S = true"
      },
      {
        "id": "proc-007",
        "type": "process",
        "title": "二号該当判定（物品販売店舗）",
        "process_type": "mechanical",
        "target_subject": "階",
        "iteration": "iterative",
        "description": "物品販売業を営む店舗（床面積の合計が1500㎡超）で売場を有する階か判定",
        "logic_expression": "U = 物品販売店舗 AND 店舗床面積合計 > 1500 AND S = true"
      },
      {
        "id": "proc-008",
        "type": "process",
        "title": "四号該当判定（病院・児童福祉施設等）",
        "process_type": "mechanical",
        "target_subject": "階",
        "iteration": "iterative",
        "description": "病院・診療所の病室床面積合計又は児童福祉施設等の居室床面積合計が50㎡超か判定",
        "logic_expression": "(U ∈ {病院, 診療所} AND 病室床面積合計 > 50) OR (U = 児童福祉施設等 AND 居室床面積合計 > 50)"
      },
      {
        "id": "proc-009",
        "type": "process",
        "title": "五号該当判定（ホテル・共同住宅等）",
        "process_type": "mechanical",
        "target_subject": "階",
        "iteration": "iterative",
        "description": "ホテル・旅館の宿泊室、共同住宅の居室、寄宿舎の寝室の床面積合計が100㎡超か判定",
        "logic_expression": "(U ∈ {ホテル, 旅館, 下宿} AND 宿泊室床面積合計 > 100) OR (U = 共同住宅 AND 居室床面積合計 > 100) OR (U = 寄宿舎 AND 寝室床面積合計 > 100)"
      },
      {
        "id": "proc-010",
        "type": "process",
        "title": "六号イ該当判定（6階以上の階）",
        "process_type": "mechanical",
        "target_subject": "階",
        "iteration": "iterative",
        "description": "6階以上の階で居室を有するか判定（一定の除外条件あり）",
        "logic_expression": "N >= 6 AND A > 0",
        "remarks": "一〜四号用途以外で居室床面積100㎡以下かつバルコニー等・特定直通階段設置の場合は除外"
      },
      {
        "id": "proc-011",
        "type": "process",
        "title": "六号ロ該当判定（5階以下の階）",
        "process_type": "mechanical",
        "target_subject": "階",
        "iteration": "iterative",
        "description": "5階以下の階で居室床面積合計が基準超過か判定",
        "logic_expression": "N <= 5 AND ((避難階直上階 AND A > 200) OR (避難階直上階以外 AND A > 100))"
      },
      {
        "id": "info-007",
        "type": "information",
        "title": "各号該当判定結果",
        "symbol": "R",
        "subject": "階",
        "property": "各号該当性",
        "property_type": "proposition",
        "plurality": "multiple",
        "description": "当該階が一〜六号のいずれかに該当するか"
      },
      {
        "id": "proc-012",
        "type": "process",
        "title": "二以上の直通階段設置要否の総合判定",
        "process_type": "mechanical",
        "target_subject": "階",
        "iteration": "iterative",
        "description": "避難階以外の階で各号のいずれかに該当する場合、二以上の直通階段設置が必要",
        "logic_expression": "P = true AND R = true"
      },
      {
        "id": "info-008",
