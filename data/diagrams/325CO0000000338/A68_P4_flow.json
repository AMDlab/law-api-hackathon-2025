  "text_raw": "ボルト孔の径は、ボルトの径より一ミリメートルを超えて大きくしてはならない。ただし、ボルトの径が二十ミリメートル以上であり、かつ、構造耐力上支障がない場合においては、ボルト孔の径をボルトの径より一・五ミリメートルまで大きくすることができる。",
  "compliance_logic": {
    "scope_condition": {
      "operator": "AND",
      "conditions": [
        {
          "type": "subject",
          "value": "ボルト接合を用いる構造"
        }
      ],
      "note": "ボルト接合（高力ボルト接合を除く）を用いる建築物に適用"
    },
    "judgment_rule": {
      "operator": "OR",
      "conditions": [
        {
          "ref": "主文基準",
          "condition": "Dh <= Db + 1",
          "note": "ボルト孔の径 <= ボルトの径 + 1mm"
        },
        {
          "operator": "AND",
          "conditions": [
            { "ref": "ボルト径条件", "condition": "Db >= 20" },
            { "ref": "構造安全性", "condition": "構造耐力上支障なし" },
            { "ref": "緩和基準", "condition": "Dh <= Db + 1.5" }
          ],
          "note": "ただし書きによる緩和条件"
        }
      ]
    }
  },
