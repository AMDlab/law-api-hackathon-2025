  "text_raw": "二　便槽の天井、底、周壁及び隔壁は、耐水材料で造り、防水モルタル塗その他これに類する有効な防水の措置を講じて漏水しないものとすること。",
  "compliance_logic": {
    "scope_condition": {
      "operator": "AND",
      "conditions": [
        { "type": "facility", "value": "改良便槽" }
      ],
      "note": "改良便槽を設置する場合に適用"
    },
    "judgment_rule": {
      "operator": "AND",
      "conditions": [
        {
          "ref": "info-all-waterproof-material",
          "operator": "==",
          "value": true,
          "note": "全ての構成部位が耐水材料で造られている"
        },
        {
          "ref": "info-all-waterproof-measure",
          "operator": "==",
          "value": true,
          "note": "全ての構成部位に防水措置が講じられている"
        },
        {
          "ref": "info-all-no-leakage",
          "operator": "==",
          "value": true,
          "note": "全ての構成部位が漏水しない"
        }
      ]
    }
  },
