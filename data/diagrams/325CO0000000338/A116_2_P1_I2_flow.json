      "operator": "AND",
      "conditions": [
        {
          "type": "building_element",
          "value": "居室の窓その他の開口部"
        }
      ],
      "note": "法第35条の適用を受ける居室が対象"
    },
    "judgment_rule": {
      "operator": "GE",
      "lhs": {
        "type": "calculation",
        "value": "開放できる部分の面積の合計"
      },
      "rhs": {
        "type": "calculation",
        "value": "居室の床面積 × 1/50（又は大臣が定める方法により算出した割合）"
      }
    },
    "exceptions": null
  },
