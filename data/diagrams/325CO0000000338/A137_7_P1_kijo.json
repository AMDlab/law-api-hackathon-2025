  "text_raw": "法第三条第二項の規定により法第四十八条第一項から第十四項までの規定の適用を受けない建築物について法第八十六条の七第一項の規定により政令で定める範囲は、増築及び改築については、次に定めるところによる。",
  "compliance_logic": {
    "scope_condition": {
      "operator": "AND",
      "conditions": [
        {
          "type": "requirement",
          "value": "増築又は改築の実施"
        }
      ],
      "note": "既存不適格建築物による増築・改築"
    },
    "judgment_rule": {
      "operator": "AND",
      "conditions": [
        {
          "type": "requirement",
          "description": "敷地内実施かつ床面積・建築面積が法定基準に適合"
        },
        {
          "type": "requirement",
          "description": "増築後床面積が基準時の1.2倍以下"
        },
        {
          "type": "requirement",
          "description": "非適合用途部分が基準時の1.2倍以下"
        },
        {
          "type": "requirement",
          "description": "設備容量が基準時の1.2倍以下（該当時）"
        },
        {
          "type": "requirement",
          "description": "用途変更を伴わない"
        }
      ]
    }
  },
