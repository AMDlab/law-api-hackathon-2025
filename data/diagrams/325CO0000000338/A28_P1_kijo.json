      "conditions": [
        {
          "type": "subject",
          "value": "便所"
        }
      ],
      "note": "建築物に便所が存在する場合に適用"
    },
    "judgment_rule": {
      "operator": "OR",
      "conditions": [
        {
          "ref": "info-window-exists",
          "operator": "==",
          "value": true,
          "note": "直接外気に接する窓がある"
        },
        {
          "ref": "info-exempt",
          "operator": "==",
          "value": true,
          "note": "ただし書きによる適用除外"
        }
      ]
    },
    "exceptions": {
      "operator": "AND",
      "conditions": [
        {
          "ref": "info-flush-toilet",
          "operator": "==",
          "value": true,
          "note": "水洗便所であること"
        },
        {
          "ref": "info-alt-equipment",
          "operator": "==",
          "value": true,
          "note": "採光・換気に代わる設備があること"
        }
      ],
      "effect": "EXEMPT"
    }
  },
