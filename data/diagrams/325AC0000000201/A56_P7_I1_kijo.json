      "operator": "AND",
      "conditions": [
        {
          "type": "regulation",
          "value": "第1項第1号又は第2項から第4項までの高さ制限が適用される"
        }
      ],
      "note": "各号に定める位置での高さ制限が存在する建築物"
    },
    "judgment_rule": {
      "operator": "AND",
      "conditions": [
        {
          "ref": "info-light-ventilation",
          "operator": "==",
          "value": true
        },
        {
          "ref": "info-standard-compliance",
          "operator": "==",
          "value": true
        }
      ]
    },
    "exceptions": null,
    "note": "第1号は前面道路の反対側の境界線上の政令で定める位置における採光・通風を基準として判定"
  },
