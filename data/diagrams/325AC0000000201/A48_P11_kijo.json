        { "type": "location", "value": "準工業地域内" }
      ],
      "note": "都市計画で定められた準工業地域"
    },
    "judgment_rule": {
      "operator": "OR",
      "conditions": [
        { "ref": "info-prohibition-not-applicable", "operator": "==", "value": true },
        { "ref": "info-special-approval", "operator": "==", "value": true }
