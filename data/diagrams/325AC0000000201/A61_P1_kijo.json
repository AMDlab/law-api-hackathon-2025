{
  "id": "CHK-BSL-A61-P1",
  "version": "3.0.0",
  "page_title": {
    "title": "防火地域等内建築物の防火設備・構造",
    "target_subject": "建築物",
    "description": "防火地域又は準防火地域内の建築物が外壁開口部の防火設備設置と建築物部分の技術的基準適合を満たすことを判定する"
  },
  "legal_ref": {
    "law_id": "325AC0000000201",
    "law_type": "act",
    "law_name": "建築基準法",
    "law_abbrev": "法",
    "article": "61",
    "paragraph": "1",
    "item": null
  },
  "labels": [
    "集団規定",
    "防火"
  ],
  "text_raw": "防火地域又は準防火地域内にある建築物は、その外壁の開口部で延焼のおそれのある部分に防火戸その他の政令で定める防火設備を設け、かつ、壁、柱、床その他の建築物の部分及び当該防火設備を通常の火災による周囲への延焼を防止するためにこれらに必要とされる性能に関して防火地域及び準防火地域の別並びに建築物の規模に応じて政令で定める技術的基準に適合するもので、国土交通大臣が定めた構造方法を用いるもの又は国土交通大臣の認定を受けたものとしなければならない。ただし、門又は塀で、高さ二メートル以下のもの又は準防火地域内にある建築物（木造建築物等を除く。）に附属するものについては、この限りでない。",
  "compliance_logic": {
    "scope_condition": {
      "operator": "OR",
      "conditions": [
        {
          "type": "location",
          "value": "防火地域内"
        },
        {
          "type": "location",
          "value": "準防火地域内"
        }
      ],
      "note": "防火地域又は準防火地域内の建築物に適用"
    },
    "judgment_rule": {
      "operator": "AND",
      "conditions": [
        {
          "ref": "info-fire-equipment-installed",
          "operator": "==",
          "value": true
        },
        {
          "ref": "info-tech-compliance",
          "operator": "==",
          "value": true
        },
        {
          "operator": "OR",
          "conditions": [
            {
              "ref": "info-minister-method",
              "operator": "==",
              "value": true
            },
            {
              "ref": "info-minister-approval",
              "operator": "==",
              "value": true
            }
          ]
        }
      ]
    },
    "exceptions": {
      "operator": "OR",
      "conditions": [
        {
          "note": "高さ2m以下の門又は塀",
          "operator": "AND",
          "conditions": [
            {
              "ref": "info-structure-type",
              "value": "門又は塀"
            },
            {
              "ref": "info-height",
              "operator": "<=",
              "value": 2
            }
          ]
        },
        {
          "note": "準防火地域内の建築物（木造建築物等を除く）に附属する門又は塀",
          "operator": "AND",
          "conditions": [
            {
              "ref": "info-structure-type",
              "value": "門又は塀"
            },
            {
              "type": "location",
              "value": "準防火地域内"
            },
            {
              "ref": "info-main-building-type",
              "operator": "!=",
              "value": "木造建築物等"
            },
            {
              "ref": "info-is-attached",
              "operator": "==",
              "value": true
            }
          ]
        }
      ],
      "effect": "EXEMPT"
    }
  },
