  "labels": ["集団規定", "道路", "接道"],
  "text_raw": "建築物の敷地は、道路(次に掲げるものを除く。第四十四条第一項を除き、以下同じ。)に二メートル以上接しなければならない。ただし、その敷地の周囲に広い空地を有する建築物その他の国土交通省令で定める基準に適合する建築物で、特定行政庁が交通上、安全上、防火上及び衛生上支障がないと認めて建築審査会の同意を得て許可したものについては、この限りでない。",
  "compliance_logic": {
    "scope_condition": {
      "operator": "AND",
      "conditions": [
        { "type": "general", "value": "すべての建築物の敷地" }
      ],
      "note": "原則としてすべての建築物の敷地に適用される"
    },
    "judgment_rule": {
      "operator": ">=",
      "lhs": {
        "ref": "info-road-contact-width",
        "description": "敷地と道路の接する部分の長さ"
      },
      "rhs": {
        "value": 2,
        "unit": "m"
      }
    },
    "exceptions": {
      "operator": "OR",
      "conditions": [
        {
          "note": "周囲に広い空地を有する建築物で特定行政庁の許可を受けたもの",
          "operator": "AND",
          "conditions": [
            { "ref": "info-wide-open-space", "operator": "==", "value": true },
            { "ref": "info-authority-permit", "operator": "==", "value": true }
          ]
        },
        {
          "note": "国土交通省令で定める基準に適合し特定行政庁の許可を受けたもの",
          "operator": "AND",
          "conditions": [
            { "ref": "info-ministerial-standard", "operator": "==", "value": true },
            { "ref": "info-authority-permit", "operator": "==", "value": true }
          ]
        }
      ],
      "effect": "EXEMPT"
    }
  },
