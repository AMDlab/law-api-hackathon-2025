          "id": "scope-001",
          "var": "in_article22_zone",
          "desc": "22条区域内に所在するか",
          "operator": "EQ",
          "value": true
        }
      ]
    },
    "judgment_rule": {
      "operator": "AND_GLOBAL",
      "conditions": [
        {
          "id": "main-001",
          "desc": "政令基準に適合",
          "operator": "EQ",
