  "page_title": {
    "title": "22条区域内建築物の屋根構造判定",
    "target_subject": "建築物",
    "description": "特定行政庁が指定する22条区域内の建築物の屋根が、防火性能基準に適合するかを判定する"
  },

  "legal_ref": {
    "law_id": "325AC0000000201",
    "law_type": "act",
    "law_name": "建築基準法",
    "law_abbrev": "法",
