  "text_raw": "高さ二十メートルをこえる建築物には、有効に避雷設備を設けなければならない。ただし、周囲の状況によつて安全上支障がない場合においては、この限りでない。",
  "compliance_logic": {
    "judgment_rule": {
      "operator": "OR",
      "conditions": [
        {
          "note": "高さ20m以下",
          "ref": "info-height-threshold-ok",
          "operator": "==",
          "value": true
        },
        {
          "note": "有効な避雷設備あり",
          "ref": "info-effective-lightning-protection",
          "operator": "==",
          "value": true
        }
      ]
    },
    "exceptions": {
      "operator": "AND",
      "conditions": [
        {
          "note": "周囲の状況により安全上支障がない",
          "ref": "info-no-safety-issue",
          "operator": "==",
          "value": true
        }
      ],
      "effect": "EXEMPT"
    }
  },
