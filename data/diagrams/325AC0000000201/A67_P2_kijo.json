  "text_raw": "建築物が特定防災街区整備地区と特定防災街区整備地区として指定されていない区域にわたる場合においては、その全部について、前項の規定を適用する。ただし、その建築物が特定防災街区整備地区外において防火壁で区画されている場合においては、その防火壁外の部分については、この限りでない。",
  "compliance_logic": {
    "scope_condition": {
      "operator": "AND",
      "conditions": [
        {
          "type": "location",
          "value": "特定防災街区整備地区内"
        },
        {
          "type": "structural",
          "value": "建築物が2つ以上の区域にわたる"
        }
      ],
      "note": "特定防災街区整備地区と指定区域外の両方にわたる建築物に適用"
    },
    "judgment_rule": {
      "operator": "OR",
      "lhs": {
        "operator": "AND",
        "conditions": [
          {
            "ref": "info-spans-zones",
            "operator": "==",
            "value": true
          },
          {
            "ref": "info-firewall-partition",
            "operator": "==",
            "value": false
          }
        ]
      },
      "rhs": {
        "operator": "AND",
        "conditions": [
          {
            "ref": "info-spans-zones",
            "operator": "==",
            "value": false
          }
        ]
      }
    },
    "exceptions": {
      "operator": "AND",
      "conditions": [
        {
          "ref": "info-spans-zones",
          "operator": "==",
          "value": true
        },
        {
          "ref": "info-firewall-partition",
          "operator": "==",
          "value": true
        }
      ],
      "effect": "PARTIAL_EXEMPT",
      "note": "防火壁で区画されている場合、防火壁外の部分は第1項適用除外"
    }
  },
