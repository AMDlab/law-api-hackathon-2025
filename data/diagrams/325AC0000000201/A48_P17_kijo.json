      "conditions": [
        {
          "type": "procedure",
          "value": "第15項の規定により意見を聴取する場合"
        }
      ],
      "note": "用途地域における特例許可（第1項～第14項ただし書）を行う際の意見聴取手続"
    },
    "judgment_rule": {
      "operator": "AND",
      "conditions": [
        {
          "ref": "info-announcement-content-complete",
          "operator": "==",
          "value": true,
          "note": "公告内容の充足（建築計画・期日・場所）"
        },
