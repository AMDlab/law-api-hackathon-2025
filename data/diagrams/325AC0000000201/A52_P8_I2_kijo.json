  "text_raw": "二その敷地内に政令で定める規模以上の空地（道路に接して有効な部分が政令で定める規模以上であるものに限る。）を有し、かつ、その敷地面積が政令で定める規模以上であること。",
  "compliance_logic": {
    "scope_condition": {
      "operator": "AND",
      "conditions": [
        {
          "type": "location",
          "value": "第一種住居地域、第二種住居地域、準住居地域、近隣商業地域、準工業地域又は商業地域内（高層住居誘導地区及び特定行政庁指定区域を除く）"
        },
        {
          "type": "use",
          "value": "全部又は一部を住宅の用途に供する建築物"
        },
        {
          "type": "exclusion",
          "value": "居住環境向上用途誘導地区内の誘導用途建築物及び特定用途誘導地区内の誘導用途建築物を除く"
        }
      ],
      "note": "法52条8項柱書による適用範囲"
    },
    "judgment_rule": {
      "operator": "AND",
      "conditions": [
        {
          "type": "proposition",
          "ref": "M1",
          "description": "敷地内空地の規模が政令基準以上"
        },
        {
          "type": "proposition",
          "ref": "M2",
          "description": "道路接続有効空地の規模が政令基準以上"
        },
        {
          "type": "proposition",
          "ref": "M3",
          "description": "敷地面積が政令基準以上"
        }
      ]
    },
    "exceptions": null
  },
