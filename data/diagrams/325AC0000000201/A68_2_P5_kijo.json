      "operator": "AND",
      "conditions": [
        {
          "type": "location",
          "value": "地区計画等（集落地区計画を除く）の区域内"
        }
      ],
      "note": "地区整備計画、特定建築物地区整備計画、防災街区整備地区整備計画、歴史的風致維持向上地区整備計画、又は沿道地区整備計画の区域"
    },
    "judgment_rule": {
      "operator": "AND",
      "conditions": [
        {
          "type": "requirement",
          "description": "用途地域の用途制限を補完する必要性がある"
        },
        {
          "type": "requirement",
          "description": "地区の特性にふさわしい土地利用の増進等の目的を達成する必要がある"
        },
        {
          "type": "procedure",
          "description": "国土交通大臣の承認を得ている"
        }
      ],
      "consequence": "第48条第1項から第13項までの規定による制限を緩和することができる"
    }
  },
