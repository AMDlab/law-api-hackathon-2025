      "symbol": "C1",
      "subject": "建築物",
      "property": "第1号建築物への該当性",
      "propertyType": "proposition",
      "description": "別表第一(い)欄の特殊建築物で床面積合計が200㎡超かどうか"
    },
    {
      "id": "info-008",
      "type": "information",
      "title": "第2号該当",
      "symbol": "C2",
      "subject": "建築物",
      "property": "第2号建築物への該当性",
      "propertyType": "proposition",
      "description": "2以上の階数を有し、又は延べ面積が200㎡超かどうか"
    },
    {
      "id": "info-009",
      "type": "information",
      "title": "第3号該当",
      "symbol": "C3",
      "subject": "建築物",
      "property": "第3号建築物への該当性",
      "propertyType": "proposition",
      "description": "都市計画区域等内の建築物かどうか"
    },
    {
      "id": "info-010",
      "type": "information",
      "title": "確認対象",
      "symbol": "T",
      "subject": "建築物",
      "property": "確認申請の要否",
      "propertyType": "proposition",
      "description": "第1号〜第3号のいずれかに該当し、確認申請が必要かどうか"
    },
    {
      "id": "info-011",
      "type": "information",
      "title": "確認済証取得",
      "symbol": "P",
      "subject": "建築主",
      "property": "確認済証の取得状況",
      "propertyType": "proposition",
      "description": "工事着手前に確認済証の交付を受けたかどうか"
    },
    {
      "id": "info-012",
      "type": "information",
      "title": "適合判定",
      "symbol": "J",
      "subject": "建築主",
      "property": "法6条1項への適合",
      "propertyType": "proposition",
      "description": "確認対象建築物について確認済証を取得している（適合）か否か"
    },
    {
      "id": "proc-001",
      "type": "process",
      "title": "第1号判定",
      "processType": "mechanical",
      "targetSubject": "建築物",
      "description": "特殊建築物で床面積合計200㎡超かを判定",
      "logicExpression": "C1 = (U ∈ 別表第一(い)) AND (A > 200)",
      "relatedArticles": ["法::A6:P1:I1"]
    },
    {
      "id": "proc-002",
      "type": "process",
      "title": "第2号判定",
      "processType": "mechanical",
      "targetSubject": "建築物",
      "description": "階数2以上または延べ面積200㎡超かを判定",
      "logicExpression": "C2 = (NOT C1) AND ((N >= 2) OR (S > 200))",
      "relatedArticles": ["法::A6:P1:I2"]
    },
    {
      "id": "proc-003",
      "type": "process",
      "title": "第3号判定",
      "processType": "mechanical",
      "targetSubject": "建築物",
      "description": "都市計画区域等内かを判定",
      "logicExpression": "C3 = (NOT C1) AND (NOT C2) AND (Z ∈ {都市計画区域, 準都市計画区域, 準景観地区, 指定区域})",
      "relatedArticles": ["法::A6:P1:I3"]
    },
    {
      "id": "proc-004",
      "type": "process",
      "title": "確認要否判定",
      "processType": "mechanical",
      "targetSubject": "建築物",
      "description": "確認申請が必要かを判定",
      "logicExpression": "T = C1 OR C2 OR C3"
    },
    {
      "id": "proc-005",
      "type": "process",
      "title": "適合判定",
      "processType": "mechanical",
      "targetSubject": "建築主",
      "description": "確認対象建築物について確認済証を取得しているかを判定",
      "logicExpression": "J = (NOT T) OR P",
      "relatedArticles": ["法::A6:P1"]
    }
  ],
