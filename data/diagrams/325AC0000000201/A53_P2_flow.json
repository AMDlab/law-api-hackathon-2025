      },
      {
        "id": "proc-calc-area-each",
        "type": "process",
        "title": "各地域内面積の測定",
        "process_type": "mechanical",
        "description": "敷地の各地域・区域内の面積を幾何学的に算出"
      },
      {
        "id": "proc-calc-total-area",
        "type": "process",
        "title": "敷地面積の算出",
        "process_type": "mechanical",
        "description": "各部分面積の合計から敷地面積を算出（A_total = Sum(A_i)）"
      },
      {
        "id": "proc-get-bcr-limits",
        "type": "process",
        "title": "各地域の建蔽率限度取得",
        "process_type": "mechanical",
        "description": "第1項に基づく各地域・区域の建蔽率限度を取得"
      },
      {
        "id": "proc-calc-area-ratio",
        "type": "process",
        "title": "面積割合の計算",
        "process_type": "mechanical",
        "description": "各地域内の面積を敷地面積で除して割合を算出（r_i = A_i / A_total）"
      },
      {
        "id": "proc-calc-weighted-bcr",
        "type": "process",
        "title": "加重平均建蔽率限度の計算",
        "process_type": "mechanical",
        "description": "各地域の建蔽率限度に面積割合を乗じて合計（BCR_limit = Sum(BCR_base_i x r_i)）"
      },
      {
        "id": "proc-get-building-area",
        "type": "process",
        "title": "建築面積の特定",
        "process_type": "undefined_input",
        "description": "設計図書等から建築面積を読み取る"
      },
      {
        "id": "proc-calc-bcr-actual",
        "type": "process",
        "title": "実際の建蔽率の計算",
        "process_type": "mechanical",
        "description": "建築面積を敷地面積で除して建蔽率を算出（BCR_actual = BA / A_total）"
      },
      {
        "id": "dec-bcr-compliance",
        "type": "decision",
        "title": "建蔽率は加重平均限度以下か？",
        "decision_type": "binary",
        "description": "実際の建蔽率が加重平均した建蔽率限度以下であるか判定"
      },
      {
        "id": "pass",
        "type": "terminal",
        "title": "適合",
        "result": "pass",
        "description": "建蔽率が加重平均限度以下であり、法53条2項に適合"
      },
      {
        "id": "fail",
        "type": "terminal",
