      "conditions": [
        {
          "type": "location",
          "value": "地区計画又は沿道地区計画の区域内"
        },
        {
          "type": "location",
          "value": "再開発等促進区又は沿道再開発等促進区内"
        },
        {
          "type": "location",
          "value": "建築物の高さの最高限度が20m以下で定められている区域"
        }
      ],
      "note": "地区整備計画又は沿道地区整備計画が定められていることが前提"
    },
    "judgment_rule": {
      "operator": "AND",
      "conditions": [
        {
          "type": "compliance",
          "description": "地区計画又は沿道地区計画の内容に適合すること",
          "reference": "info-district-plan-conformance"
        },
        {
          "type": "property",
          "description": "敷地面積が政令で定める規模以上であること",
