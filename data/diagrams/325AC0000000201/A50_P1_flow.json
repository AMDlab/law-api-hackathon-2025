        "process_type": "undefined_input",
        "description": "設計図書等から対象となる敷地を特定"
      },
      {
        "id": "proc-site-area",
        "type": "process",
        "title": "敷地面積の算定",
        "process_type": "mechanical",
        "description": "敷地の幾何学的形状から面積を計算"
      },
      {
        "id": "proc-buildings-set",
        "type": "process",
        "title": "敷地内建築物の特定",
        "process_type": "human_judgment",
        "description": "同一敷地内の全ての建築物（既存建築物を含む）を特定"
      },
      {
        "id": "proc-building-area",
        "type": "process",
        "title": "建築面積の算定",
        "process_type": "mechanical",
        "description": "各建築物の水平投影面積から建築面積を算定",
        "related_articles": [
          "令::A2:P1:I2"
        ]
      },
      {
        "id": "dec-multiple-buildings",
        "type": "decision",
        "title": "同一敷地内に複数の建築物があるか？",
        "decision_type": "binary",
        "description": "同一敷地内に2以上の建築物があるかを確認"
      },
      {
        "id": "proc-total-area",
        "type": "process",
        "title": "建築面積の合計算定",
        "process_type": "mechanical",
        "description": "同一敷地内の全ての建築物の建築面積を合計"
      },
      {
        "id": "proc-coverage-ratio",
        "type": "process",
        "title": "建ぺい率の計算",
        "process_type": "mechanical",
        "description": "建築面積（の合計）を敷地面積で除して建ぺい率を算定"
      },
      {
        "id": "proc-designated-ratio",
        "type": "process",
        "title": "指定建ぺい率の特定",
        "process_type": "mechanical",
        "description": "都市計画情報から当該敷地に適用される建ぺい率の限度を特定"
      },
      {
        "id": "dec-compliance",
        "type": "decision",
        "title": "建ぺい率 <= 指定建ぺい率か？",
        "decision_type": "binary",
        "description": "計算した建ぺい率が指定建ぺい率以下であることを確認",
        "condition": {
          "operator": "LTE",
          "lhs": {
            "var": "BCR",
            "desc": "建ぺい率"
          },
          "rhs": {
            "var": "BCR_max",
            "desc": "指定建ぺい率",
            "unit": "%"
          }
        }
      },
      {
        "id": "pass",
        "type": "terminal",
        "title": "適合",
        "result": "pass",
        "description": "法50条1項の建ぺい率制限に適合"
      },
      {
        "id": "fail",
        "type": "terminal",
        "title": "不適合",
        "result": "fail",
        "description": "法50条1項の建ぺい率制限に不適合（建ぺい率超過）"
      }
