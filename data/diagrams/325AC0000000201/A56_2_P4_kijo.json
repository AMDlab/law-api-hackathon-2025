  "text_raw": "対象区域外にある高さが十メートルを超える建築物で、冬至日において、対象区域内の土地に日影を生じさせるものは、当該対象区域内にある建築物とみなして、第一項の規定を適用する。",
  "compliance_logic": {
    "scope_condition": {
      "operator": "AND",
      "conditions": [
        {
          "type": "location",
          "value": "対象区域外"
        },
        {
          "type": "winter_solstice",
          "value": "true"
        }
      ],
      "note": "対象区域は法56条の2の規定に基づき地方公共団体が条例で指定する区域"
    },
    "judgment_rule": {
      "operator": "AND",
      "conditions": [
        {
          "type": "numeric_comparison",
          "variable": "建築物の高さ",
          "operator": ">",
          "value": 10,
          "unit": "m"
        },
        {
          "type": "shadow_detection",
          "variable": "冬至日における対象区域内の土地への日影",
          "operator": "exists",
          "value": true
        }
      ],
      "conclusion": "対象区域内にある建築物とみなして、法56条の2第1項の規定を適用する"
    }
  },
